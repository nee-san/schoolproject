# Description: Network utility to retrieve files from the Web
# URL:         https://www.gnu.org/software/wget/wget.html
# Maintainer:  nee-san, nagakamira at gmail dot com
# Depends on:  zlib libressl util-linux texinfo

name=wget
version=1.20.3
release=1
source=("http://ftp.gnu.org/gnu/$name/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version

cat >> doc/sample.wgetrc <<EOF
ca_certificate=/etc/ssl/cert.pem
EOF

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-ssl=openssl \
		--disable-rpath
	make
	make DESTDIR="$PKG" install
}
